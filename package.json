{
  "name": "epub-jsx",
  "version": "0.0.1",
  "description": "Preact JSX bindings for creating EPUB documents",
  "main": "dist/index.js",
  "scripts": {
    "build": "tsc -p tsconfig.json",
    "test": "jest"
  },
  "repository": {
    "type": "git",
    "url": "git+ssh://git@github.com/wyvernzora/epub-jsx.git"
  },
  "keywords": [
    "epub",
    "react",
    "jsx"
  ],
  "author": "Denis Luchkin-Zhou <wyvernzora@gmail.com>",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/wyvernzora/epub-jsx/issues"
  },
  "homepage": "https://github.com/wyvernzora/epub-jsx#readme",
  "dependencies": {
    "moment": "^2.29.1",
    "preact": "^10.5.7",
    "preact-render-to-string": "^5.1.12"
  },
  "devDependencies": {
    "@types/jest": "^26.0.19",
    "chalk": "^4.1.0",
    "jest": "^26.6.3",
    "jest-xml-matcher": "^1.2.0",
    "ts-jest": "^26.4.4",
    "typescript": "^4.1.3"
  },
  "jest": {
    "rootDir": "./",
    "testMatch": [
      "**/test/**.test.(ts|tsx)",
      "**/test/**/*.test.(ts|tsx)"
    ],
    "transform": {
      "^.+\\.(ts|tsx)$": "ts-jest"
    },
    "collectCoverage": true,
    "collectCoverageFrom": [
      "**/src/**",
      "!**/node_modules/**",
      "!**/test/**"
    ],
    "coverageReporters": [
      "html",
      "text-summary"
    ]
  }
}
